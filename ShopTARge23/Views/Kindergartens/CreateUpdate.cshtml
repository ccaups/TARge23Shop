@model ShopTARge23.Models.Kindergartens.KindergartensCreateUpdateViewModel



@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="UpdatedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label">Kindergarten</label>
            <div class="col-sm-6">
                <input asp-for="KindergartenName" class="form-control" />
            </div>
            <div class="col-sm-4">
                <select asp-for="KindergartenName" class="form-control" id="KindergartenNameSelect">
                    <option value="" disabled selected>Choose Kindergarten</option>
                    @foreach (var kindergartenName in Model.KindergartenNames)
                    {
                        <option value="@kindergartenName">@kindergartenName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label">GroupName</label>
            <div class="col-sm-6">
                <input asp-for="GroupName" class="form-control" />
            </div>
            <div class="col-sm-4">
                <select asp-for="GroupName" class="form-control" id="GroupNameSelect">
                    <option value="" disabled selected>Choose GroupName</option>
                    @foreach (var groupName in Model.GroupNames)
                    {
                        <option value="@groupName">@groupName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Teacher" class="col-sm-2 col-form-label">Teacher</label>
            <div class="col-sm-6">
                <input asp-for="Teacher" class="form-control" />
            </div>
            <div class="col-sm-4">
                <select asp-for="Teacher" class="form-control" id="TeacherNameSelect">
                    <option value="" disabled selected>Choose Teacher</option>
                    @foreach (var teacherName in Model.TeacherNames)
                    {
                        <option value="@teacherName">@teacherName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ChildrenCount" class="form-control" />
            </div>
        </div>

        <hr />

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="kindergartens" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="kindergartens" type="submit" class="btn btn-primary" value="Create" />

        }
        <a asp-action="Index" asp-controller="kindergartens" class="btn btn-success">Back</a>
    </form>
</div>
